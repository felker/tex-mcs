\RequirePackage{ifthen}

\mode<presentation>

\input{colors}

\ifbeamer@faculty\colorlet{anl-faculty}{anl-\beamer@facultyvalue}\fi

% switch between the generic yellow use of highlights or faculty specific colors
\ifthenelse{ \boolean{beamer@faculty} \AND \boolean{beamer@usefacultycolors} }
{
  \colorlet{anlalert}  {anl-faculty}
  \colorlet{anlexample}{anlblue}
}
{
  \colorlet{anlalert}  {anlyellow}
  \colorlet{anlexample}{anlblue}
}


% general colors
\setbeamercolor{structure}           {fg = anlgrey}%
\setbeamercolor{normal text}         {fg = anlgrey}%
\setbeamercolor{frametitle}          {fg = anlblue}%
\setbeamercolor{frame number in foot}{fg = anlblue}%
\setbeamercolor{subtitle}            {fg = anlyellow}%
\setbeamercolor{author}              {fg = anlblue}%

% alert color
\setbeamercolor{alerted text}{fg=anlalert}

% blocks
\setbeamercolor{block title}{use=structure,fg=white,bg=anlblue}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=anlalert}
\setbeamercolor{block title example}{use=example text,fg=white,bg=anlexample}

\setbeamercolor{block body}        {fg=anlblue,use=block title,bg=anlblue!10!white}
\setbeamercolor{block body alerted}{fg=anlblue,use=block title alerted,bg=anlalert!10!white}
\setbeamercolor{block body example}{fg=anlblue,use=block title example,bg=anlexample!10!white}

\mode
<all>
